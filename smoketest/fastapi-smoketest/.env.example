# 実値はGitに入れないでください（.envはコミットしない）
# App Platformでは環境変数として登録し、必要なものはEncryptを有効にします。

# DB（Managed PostgreSQL）
DATABASE_URL=

# Spaces（S3互換）
SPACES_BUCKET=
SPACES_REGION=
SPACES_ENDPOINT_URL=  # 例: https://nyc3.digitaloceanspaces.com
SPACES_ACCESS_KEY_ID=
SPACES_SECRET_ACCESS_KEY=

# 認証（RBACの最小実装）
# - AUTH_USERS_JSON は JSON配列です。値は長くなるので、App PlatformではEncryptで登録することを推奨します。
# - 例（管理者1名）: [{"username":"admin","role":"admin","salt_b64":"...","hash_b64":"..."}]
AUTH_TOKEN_SECRET=
AUTH_USERS_JSON=

# バックアップ/世代管理（Jobで利用）
APP_NAME=
SPACES_BACKUP_PREFIX=backups
BACKUP_RETENTION_DAYS=30
